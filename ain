#!/bin/bash

clear
#-- colors --#
#R='\e[1;31m' #RED
#G='\e[1;32m' #GREEN
#B='\e[1;34m' #BLUE
#Y='\e[1;33m' #YELLOW
#C='\e[1;36m' #CYAN
W='\e[1;37m' #WHITE
##############

#-- colors v2 --#
R='\e[31;1m' #RED
G='\e[32;1m' #GREEN
Y='\e[33;1m' #YELLOW
DB='\e[34;1m' #DARKBLUE
P='\e[35;1m' #PURPLE
LB='\e[36;1m' #LIGHTBLUE

#-- colors v3 --#
BR='\e[3;31m' #RED
BG='\e[3;32m' #GREEN
BY='\e[3;33m' #YELLOW
BDB='\e[3;34m' #DARKBLUE
BP='\e[3;35m' #PURPLE
BLB='\e[3;36m' #LIGHTBLUE

echo -e "$Y"
xderm-mini(){
read -p "akan menginstall xderm-mini,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai penginstallan xderm-mini"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/xderm-mini/main/install-xderm-mini" -P /usr/bin/ && chmod 777 /usr/bin/install-xderm-mini && bash install-xderm-mini
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e ""
xderm-mini-gui(){
read -p "akan menginstall xderm-mini-gui,pastikan xderm-mini sudah terinstall. apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai penginstallan xderm-mini-gui"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/ryanfauzi1/xderm-mini_GUI/main/installer" -O /root/installer && chmod +x installer && bash installer
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e "$Y"
speedtest(){
read -p "akan menginstall speedtest,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai penginstallan speedtest"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/speedtest/main/install-speedtest" -P /root/ && chmod 777 /root/install-speedtest && bash install-speedtest
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e "$Y"
install-terminal-luci(){
read -p "akan menginstall terminal-luci untuk openwrt v19,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai penginstallan terminal-luci"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/terminal-luci/main/install-terminal-luci" -P /root/ && chmod 777 /root/install-terminal-luci && bash install-terminal-luci
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e "$Y"
uninstall-terminal-luci(){
read -p "akan uninstall terminal-luci untuk openwrt v19,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai uninstall terminal-luci"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/terminal-luci/main/uninstall-terminal-luci" -P /root/ && chmod 777 /root/uninstall-terminal-luci && bash uninstall-terminal-luci
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e "$Y"
install-argonv19(){
read -p "akan menginstall argon untuk openwrt v19,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai penginstallan argon teme openwrt v19"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/argon-themev19/main/install-argon-v19" -P /root/ && chmod 777 /root/install-argon-v19 && bash install-argon-v19
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e "$Y"
