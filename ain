echo -e "$Y"
uninstall-argonv18(){
read -p "akan uninstall argon untuk openwrt v18,apakah anda yakin? (y/n) : " an
if [[ $an == "y" || $an == "Y" ]]; then
echo -e "memulai uninstall argon teme openwrt v18"
sleep 2
clear
wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/argon-themev18/main/uninstall-argon-v18" -P /root/ && chmod 777 /root/uninstall-argon-v18 && bash uninstall-argon-v18
sleep 2
else
clear
echo -e "kembali ke halaman awal..."
sleep 2
clear
exit
fi
}
echo -e "$Y"
update-ain(){
rm -rf /usr/bin/update-ain &> /dev/null
echo -e " mengecek versi AIN"; wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/ain/main/update-ain" -P /usr/bin &> /dev/null
sleep 1
an=$(cat /usr/bin/update-ain)
if [[ $an == *"1.1"* ]]; then
echo -e " AIN sudah$R versi terbaru"
echo -e "$Y"
sleep 2
exit
else
echo -e "$P sedang memperbaharui..."
sleep 1
fi
rm -rf /usr/bin/update-ain &> /dev/null
an=$(find /usr/bin)
if [[ $an ==  *"ain"* ]]; then
rm -rf /usr/bin/ain &> /dev/null
echo -e "$G memperbaharui..."; wget --no-check-certificate "https://raw.githubusercontent.com/vitoharhari/ain/main/ain" -P /usr/bin &> /dev/null
sleep 1
chmod 777 /usr/bin/ain &> /dev/null
echo -e "$LB update selesai"
sleep 2
echo -e ""
echo -e "$R changelog V1.1"
echo -e "$LB"
echo -e " added installer xderm-mini"
echo -e " added installer xderm-mini-gui"
echo -e " added installer speedtest"
echo -e " added installer terminal-luci"
echo -e " added uninstaller terminal-luci"
echo -e " added installer theme-argon-v19"
echo -e " added uninstaller theme-argon-v19"
echo -e " added installer theme-argon-v18"
echo -e " added uninstaller theme-argon-v18"
echo -e "$Y"
else
echo -e ""
sleep 1
fi
exit
}

banner(){
clear
echo -e "$DB **************************************************"
echo -e "$DB **************************************************"
echo -e " **                                              **"
echo -e "$DB **$R    SELAMAT DATANG DI AIN (AUTO INSTALLER)    $DB**"
echo -e " **                                              **"
echo -e "$DB **************************************************"
echo -e "$DB **$Y     PILIH TOOLS YANG AKAN DI INSTALL!!!      $DB**"
echo -e "$DB **************************************************"
echo -e "$DB **$G        DAFTAR :                *  PERINTAH : $DB**"
echo -e "$DB **$G INSTALL XDERM-MINI             *    ain 1    $DB**"
echo -e "$DB **$G INSTALL XDERM-MINI-GUI         *    ain 2    $DB**"
echo -e "$DB **$G INSTALL SPEEDTEST BY OOKLA     *    ain 3    $DB**"
echo -e "$DB **$G INSTALL TERMINAL-LUCI V19      *    ain 4    $DB**"
echo -e "$DB **$G UNINSTALL TERMINAL-LUCI V19    *    ain 5    $DB**"
echo -e "$DB **$G INSTALL ARGON THEME V19        *    ain 6    $DB**"
echo -e "$DB **$G UNINSTALL ARGON THEME V19      *    ain 7    $DB**"
echo -e "$DB **$G INSTALL ARGON THEME V18        *    ain 8    $DB**"
echo -e "$DB **$G UNINSTALL ARGON THEME V18      *    ain 9    $DB**"
echo -e "$DB **$G UPDATE AIN KE VERSI TERBARU    *    ain 10   $DB**"
echo -e "$DB **************************************************"
echo -e "$DB **$Y       AIN V1.1$DB *$Y COPYRIGHT$R @$Y VITO H.S        $DB**"
echo -e "$DB **************************************************"
echo -e "$DB **************************************************"
echo -e "$Y"
}

case $1 in
"1")
xderm-mini;exit
;;
esac

case $1 in
"2")
xderm-mini-gui;exit
;;
esac

case $1 in
"3")
speedtest;exit
;;
esac

case $1 in
"4")
install-terminal-luci;exit
;;
esac

case $1 in
"5")
uninstall-terminal-luci;exit
;;
esac

case $1 in
"6")
install-argonv19;exit
;;
esac

case $1 in
"7")
uninstall-argonv19;exit
;;
esac

case $1 in
"8")
install-argonv18;exit
;;
esac

case $1 in
"9")
uninstall-argonv18;exit
;;
esac

case $1 in
"10")
banner;update-ain
;;
esac



clear
echo -e "$DB **************************************************"
echo -e "$DB **************************************************"
echo -e " **                                              **"
echo -e "$DB **$R    SELAMAT DATANG DI AIN (AUTO INSTALLER)    $DB**"
echo -e " **                                              **"
echo -e "$DB **************************************************"
echo -e "$DB **$Y     PILIH TOOLS YANG AKAN DI INSTALL!!!      $DB**"
echo -e "$DB **************************************************"
echo -e "$DB **$G        DAFTAR :                *  PERINTAH : $DB**"
echo -e "$DB **$G INSTALL XDERM-MINI             *    ain 1    $DB**"
echo -e "$DB **$G INSTALL XDERM-MINI-GUI         *    ain 2    $DB**"
echo -e "$DB **$G INSTALL SPEEDTEST BY OOKLA     *    ain 3    $DB**"
echo -e "$DB **$G INSTALL TERMINAL-LUCI V19      *    ain 4    $DB**"
echo -e "$DB **$G UNINSTALL TERMINAL-LUCI V19    *    ain 5    $DB**"
echo -e "$DB **$G INSTALL ARGON THEME V19        *    ain 6    $DB**"
echo -e "$DB **$G UNINSTALL ARGON THEME V19      *    ain 7    $DB**"
echo -e "$DB **$G INSTALL ARGON THEME V18        *    ain 8    $DB**"
echo -e "$DB **$G UNINSTALL ARGON THEME V18      *    ain 9    $DB**"
echo -e "$DB **$G UPDATE AIN KE VERSI TERBARU    *    ain 10   $DB**"
echo -e "$DB **************************************************"
echo -e "$DB **$Y       AIN V1.1$DB *$Y COPYRIGHT$R @$Y VITO H.S        $DB**"
echo -e "$DB **************************************************"
echo -e "$DB **************************************************"
echo -e "$Y"
exit
